# Default goal
.DEFAULT_GOAL := help

# Color definitions (ANSI escape codes)
YELLOW := \033[1;33m
CYAN   := \033[1;36m
RESET  := \033[0m

## build            ğŸ› ï¸  Build the Rust project
build:
	cargo build

## run              ğŸš€ Run the Rust binary
run:
	cargo run

## release          ğŸ“¦ Build release binary
release:
	cargo build --release

## test             ğŸ§ª Run tests
test:
	cargo test

## fmt              ğŸ¨ Format code using rustfmt
fmt:
	cargo fmt

## clippy           ğŸ” Run clippy linter
clippy:
	cargo clippy --all-targets --all-features -- -D warnings

## clean            ğŸ§¹ Clean the target directory
clean:
	cargo clean

## help             ğŸ“– Show this help message
help:
	@printf "$(CYAN)Available commands:$(RESET)\n\n"
	@awk 'BEGIN {FS = ":.*##"; OFS = ""} \
		/^[a-zA-Z0-9_-]+:.*##/ { \
			printf "  $(YELLOW)%-15s$(RESET) %s\n", $$1, $$2 \
		}' $(MAKEFILE_LIST)
